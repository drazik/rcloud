{% trans_default_domain 'FOSUserBundle' %}

<h2>Cr√©ation d'un groupe</h2>
<form class="form" action="{{ path('fos_user_group_new') }}" {{ form_enctype(form) }} method="POST" class="fos_user_group_new">
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    <div class="visually-hidden">
        {{ form_widget(form.owner) }}
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
        <button class="button button-small" type="submit"><i class="fa fa-plus"></i> {{ 'group.new.submit'|trans }}</button>
    </div>
</form>

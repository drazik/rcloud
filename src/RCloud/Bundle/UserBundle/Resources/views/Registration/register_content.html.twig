{% trans_default_domain 'FOSUserBundle' %}

<form class="login-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group first">
        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
    </div>
    <div class="form-group last">
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}
    </div>
    {{ form_rest(form) }}
    <div class="form-controls">
        <button class="button" type="submit">{{ 'registration.submit'|trans }}</button>
        <a class="button button-secondary" href="{{ path('fos_user_security_login') }}">Connexion</a>
    </div>
</form>
